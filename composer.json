{
  "name": "soatok/mini-fedi-server",
  "type": "project",
  "keywords": ["dev", "testing"],
  "license": "ISC",
  "description": "A small ActivityPub-based webserver that exists solely for testing purposes",
  "authors": [
    {
      "name": "Soatok Dreamseeker",
      "email": "soatok.dhole@gmail.com",
      "homepage": "https://soatok.blog"
    }
  ],
  "autoload": {
    "psr-4": {
      "Soatok\\MiniFedi\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soatok\\MiniFedi\\Tests\\": "tests"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "ezyang/htmlpurifier": "^4",
    "fedi-e2ee/pkd-crypto": "^0.34|^1",
    "guzzlehttp/guzzle": "^6|^7",
    "laminas/laminas-diactoros": "^3",
    "laminas/laminas-httphandlerrunner": "^2",
    "league/route": "^6",
    "paragonie/easydb": "^3",
    "paragonie/easydb-cache": "^2.2",
    "psr/http-message": "^2",
    "twig/twig": "^3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10|^11|^12",
    "vimeo/psalm": "^6"
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S 0.0.0.0:65233 -t public public/index.php"
  }
}
